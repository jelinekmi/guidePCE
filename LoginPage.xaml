<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bakalarka_Jelinek.LoginPage"
             Title="Přihlášení">

	<VerticalStackLayout Padding="20" Spacing="15">
		<Label Text="Přihlášení" FontSize="24" HorizontalOptions="Center"/>

		<Entry Placeholder="Email" x:Name="EmailEntry"/>
		<Entry Placeholder="Heslo" x:Name="PasswordEntry" IsPassword="True"/>

		<Button Text="Přihlásit se" Clicked="OnLoginButtonClicked"/>
	</VerticalStackLayout>

</ContentPage>