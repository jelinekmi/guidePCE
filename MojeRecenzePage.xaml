<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bakalarka_Jelinek.MojeRecenzePage"
             Title="Moje recenze">

    <CollectionView x:Name="ReviewListView" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*, Auto">
                        
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="{Binding Nazev}" 
                               FontAttributes="Bold" 
                               FontSize="18" />
                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="{Binding Datum, StringFormat='Datum: {0:dd.MM.yyyy HH:mm}'}"
                               FontSize="12"
                               TextColor="Gray"
                               HorizontalOptions="End" />

                        
                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="{Binding Typ}" 
                               FontAttributes="Italic" 
                               FontSize="14" 
                               TextColor="Gray" />

                        
                        <Label Grid.Row="2" Grid.Column="0" 
                               Text="{Binding ReviewText}" 
                               FontSize="14"
                               Grid.ColumnSpan="2" />

                        
                        <StackLayout Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalOptions="Center">
                            <Label Text="{Binding Rating, StringFormat='HodnocenÃ­: {0} / 5'}" TextColor="Orange" />
                        </StackLayout>

                        <Button Grid.Row="3" Grid.Column="1"
                                Text="Odstranit" 
                                Clicked="OnDeleteClicked"
                                BackgroundColor="Red"
                                TextColor="White"
                                HorizontalOptions="End"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
